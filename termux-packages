#!/bin/bash

# dependencies #

. "${PREFIX}"/bin/console

# script #

script=$(basename -- "${BASH_SOURCE[0]}")

# version #

version="01-06-2022"

# usage #

# prompt #

console.script "Setting up ${script#*-}"
echo

# variables #

# defaults #

# update packages list

console.update

# upgrade installed packages

console.upgrade

# values #

display_list=(
)

documentation_list=(
	man
)

extensions_list=(
	termux-am
	termux-api
	termux-auth
	termux-generate-package
	termux-elf-cleaner
	termux-exec
	termux-keyring
	termux-licenses
	termux-services
	termux-tools
)

fonts_list=(
)

multimedia_list=(
	ffmpeg
	flac
	gstreamer
	gst-plugins-good
	gst-plugins-bad
	gst-plugins-ugly
	gst-plugins-base
)

repositories_list=(
	game-repo
	root-repo
	science-repo
	termux-apt-repo
	unstable-repo
	x11-repo
)

security_list=(
)

utilities_list=(
	debootstrap
	git
	hub
	htop
	ncurses
	ncurses-utils
	proot
	zip
	unzip
	bzip2
	gzip
	lzip
	p7zip
	rsync
	wget
)

vnc_list=(
	tigervnc
)

xfce_list=(
	xfce4
	xfce4-appfinder
	xfce4-dict
	xfce4-notifyd
	xfce4-panel
	xfce4-screenshooter
	xfce4-session
	xfce4-settings
	xfce4-taskmanager
	xfce4-terminal
	gigolo
	parole
	thunar
	thunar-archive-plugin
	ristretto
	tumbler
)

xfce_fonts_list=(
)

xfce_themes_list=(
	papirus-icon-theme
)

xfce_addons_list=(
	xfce4-calculator-plugin
	xfce4-clipman-plugin
	xfce4-datetime-plugin
	xfce4-eyes-plugin
	xfce4-mailwatch-plugin
	xfce4-netload-plugin
	xfce4-notes-plugin
	xfce4-places-plugin
	xfce4-timer-plugin
	xfce4-wavelan-plugin
	xfce4-whiskermenu-plugin
)

# options #

# xfce

if [[ $(cat "${PREFIX}"/bin/dextop) = "xfce" ]]
then
	desktop_environment_list+=(
		${xfce_list[@]}
		${xfce_fonts_list[@]}
		${xfce_themes_list[@]}
	)

	#	${xfce_addons_list[@]}
fi

# none

if [[ $(cat "${PREFIX}"/bin/dextop) = "none" ]]
then
	desktop_environment_list=()
fi

# install #

install_list+=(
	${display_list[@]}
	${documentation_list[@]}
	${extensions_list[@]}
	${fonts_list[@]}
	${multimedia_list[@]}
	${repositories_list[@]}
	${security_list[@]}
	${utilities_list[@]}
	${vnc_list[@]}
	${desktop_environment_list[@]}
)

console.install ${install_list[@]}

# reinstall

reinstall_list=(
	xfce*
	xfce4*
	thunar*
)

console.reinstall ${reinstall_list[@]}

# purge #

purge_list=(
	gtkhash*
	leafpad*
	xfce4*plugin
)

console.purge ${purge_list[@]}
