#!/bin/bash

# dependencies #

. /data/data/com.termux/files/usr/bin/console

# script #

script=$(basename -- "${BASH_SOURCE[0]}")

# version #

version="12-03-2021"

# usage #

# prompt #

console.script "Setting up ${script#*-}"
echo

# variables #

# defaults #

# update packages list

console.update

# upgrade installed packages

console.upgrade

# values #

documentation_list=(
	man
)

multimedia_list=(
	ffmpeg
	flac
	gstreamer
)

extensions_list=(
	termux-am
	termux-api
	termux-auth
	termux-generate-package
	termux-elf-cleaner
	termux-exec
	termux-keyring
	termux-licenses
	termux-services
	termux-tools
)

repositories_list=(
	game-repo
	root-repo
	science-repo
	termux-apt-repo
	unstable-repo
	x11-repo
)

utilities_list=(
	debootstrap
	htop
	ncurses
	ncurses-utils
	proot
	zip
	unzip
	bzip2
	gzip
	lzip
	p7zip
	rsync
	tsu
	wget
)

vnc_list=(
	tigervnc
)

i3wm_list=(
	i3
	i3status
	dmenu
	feh
	file
	st
	ranger
	w3m
	w3m-img
)

i3wm_fonts_list=(
)

i3wm_themes_list=(
)

i3wm_addons_list=(
)

xfce_list=(
	xfce4
	xfce4-appfinder
	xfce4-panel
	xfce4-session
	xfce4-settings
	xfce4-taskmanager
	xfce4-terminal
	thunar
	ristretto
)

xfce_fonts_list=(
)

xfce_themes_list=(
)

xfce_addons_list=(
	xfce4-calculator-plugin
	xfce4-clipman-plugin
	xfce4-datetime-plugin
	xfce4-mailwatch-plugin
	xfce4-whiskermenu-plugin
)

# initialize desktop environment list

desktop_environment_list=()

# initialize install list

install_list=()

# options #

# i3wm #

if [[ "${option}" = "i3wm" ]]
then
	desktop_environment_list+=(
		${i3wm_list[@]}
		${i3wm_fonts_list[@]}
		${i3wm_themes_list[@]}
		${i3wm_addons_list[@]}
	)
fi

# xfce

if [[ "${option}" = "xfce" ]]
then
	desktop_environment_list+=(
		${xfce_list[@]}
		${xfce_fonts_list[@]}
		${xfce_themes_list[@]}
		${xfce_addons_list[@]}
	)
fi

# none

if [[ "${option}" = "none" ]]
then
	desktop_environment_list=()
fi

# install

install_list+=(
	${documentation_list[@]}
	${multimedia_list[@]}
	${extensions_list[@]}
	${repositories_list[@]}
	${utilities_list[@]}
	${vnc_list[@]}
	${desktop_environment_list[@]}
)

console.install ${install_list[@]}