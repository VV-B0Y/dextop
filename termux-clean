#!/bin/bash

# dependencies #

source /data/data/com.termux/files/usr/bin/console
source /data/data/com.termux/files/usr/bin/dextop

# script #

script=$(basename -- "${BASH_SOURCE[0]}")

# version #

version="08-12-2021"

# usage #

while (($#))
do
	case "${1}" in
		-h|--help)
			echo
			echo -e "Usage: ${script} [OPTION]"
			echo
			echo -e "Options:"
			echo
			echo -e "-h, --help \t Show help and usage information."
			echo
			echo -e "'${script}' [ Version ${version} ]"
			echo

			exit
		;;

		*)
			echo
			echo "Usage: ${script} [OPTION]"
			echo
			echo -e "${script}: Unknown option '${1}'"
			echo -e "Type './${script} --help' for help and usage information."
			echo

			exit 1
		;;
	esac

	shift
done

# prompt #

console.script "Cleaning up [ ${script%-*} ]"
echo

# variables #

# set defaults

# initialize cleanup: find setup completion flag

if [[ "$(cat ${BINARIES_DIRECTORY}/termux-setup-complete)" = "yes" ]]
then
	# message #

	console.scs "Setup complete [ ${script%-*} ]"
	echo
	
	
	
	console.fwd "Removing setup files..."
	echo

	# remove setup files

	setup_files_list=(
		"${HOME}"/dextop
		"${BINARIES_DIRECTORY}"/termux-setup
		"${BINARIES_DIRECTORY}"/termux-setup-complete
	)

	for file in ${setup_files_list[@]}
	do
		rm "${file}"
	done

else
	console.err "Some errors were encountered during setup."
	echo
	
	console.inf "Consult setup logs at '"${PREFIX}"/var/log/' for details."
	echo
	
	
fi
