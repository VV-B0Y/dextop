#!/bin/bash

# dependencies #

curl -sL get.cnsl.app/console > "${PREFIX}"/bin/console && source "${PREFIX}"/bin/console

# script #

script=$(basename -- "${BASH_SOURCE[0]}")

# version #

version="08-12-2021"

# usage #

while (($#))
do
	case "${1}" in
		-t|--termux)
			dextop_option="termux"
		;;
		
		-p|--proot)
			dextop_option="proot"
		;;
		
		-k|--kde)
			desktop_option="kde"
		;;

		-x|--xfce)
			desktop_option="xfce"
		;;
		
		-b|--base)
			install_option="base"
		;;

		-f|--full)
			install_option="full"
		;;

		-l|--lite)
			install_option="lite"
		;;

		-h|--help)
			echo
			echo -e "USAGE:"
			echo
			echo -e "-t, --termux \t Setup Termux environment only - VNC setup not included."
			echo -e "-p, --proot  \t Setup Proot environment - VNC setup included."
			echo
			echo -e "-k, --kde    \t KDE5 setup: install K desktop environment and utilities."
			echo -e "-x, --xfce   \t XFCE4 setup: install XFCE desktop environment and utilities."
			echo
			echo -e "-b, --base   \t Base setup: download and install base distribution image only."
			echo
			echo -e "-f, --full   \t Full setup: download and install full desktop environment and utilities."
			echo -e "-l, --lite   \t Lite setup: download and install lite desktop environment and utilities."
			echo
			echo -e "-h, --help   \t Show help and usage information."
			echo
			echo -e "'${script}' [ Version ${version} ]"
			echo

			exit
		;;

		"")
			# handle empty argument
			# use default values specified in script

			:
		;;

		*)
			echo
			echo -e "Usage: ${script} | [OPTION]"
			echo
			echo -e "${script}: Unknown option '${1}'"
			echo -e "Type './${script} --help' for help and usage information."
			echo

			exit 1

		;;

		esac

	shift

done

# clear

console.clear

# prompt #

console.script "Initializing setup [ ${script%-*} ]"
echo

# variables #

# set defaults

[ -z "${dextop_option}" ]														&& dextop_option="proot"
[ -z "${desktop_option}" ]														&& desktop_option="kde"
[ -z "${install_option}" ]														&& install_option="lite"

# export variables

echo '# variables #'															>> "${PREFIX}"/bin/dextop

echo "export version=${version}"												>> "${PREFIX}"/bin/dextop

echo '# dextop #'																>> "${PREFIX}"/bin/dextop

echo 'export MAIN_DIRECTORY="${PREFIX%/*}"'										>> "${PREFIX}"/bin/dextop
echo 'export BINARIES_DIRECTORY="${PREFIX}"/bin'								>> "${PREFIX}"/bin/dextop
echo 'export LIBRARIES_DIRECTORY="${PREFIX}"/lib'								>> "${PREFIX}"/bin/dextop
echo 'export SOURCES_DIRECTORY="${PREFIX}"/etc/apt'								>> "${PREFIX}"/bin/dextop
echo 'export BACKUP_DIRECTORY="${MAIN_DIRECTORY}"/bkp'							>> "${PREFIX}"/bin/dextop
echo 'export IMAGE_DIRECTORY="${MAIN_DIRECTORY}"/img'							>> "${PREFIX}"/bin/dextop
echo 'export ISO_DIRECTORY="${MAIN_DIRECTORY}"/iso'								>> "${PREFIX}"/bin/dextop
echo 'export MOUNT_DIRECTORY="${MAIN_DIRECTORY}"/mnt'							>> "${PREFIX}"/bin/dextop

echo '# options #'																>> "${PREFIX}"/bin/dextop

echo "export dextop_option=${dextop_option}"									>> "${PREFIX}"/bin/dextop
echo "export desktop_option=${desktop_option}"									>> "${PREFIX}"/bin/dextop
echo "export install_option=${install_option}"									>> "${PREFIX}"/bin/dextop

# clear #

console.clear

# source variables

[ -f "${PREFIX}"/bin/dextop ] && source "${PREFIX}"/bin/dextop

# values #

utilities_list=(
	termux-utilities
	termux-setup
	proot-utilities
	proot-setup
	vnc-utilities
	vnc-setup
)

# download #

console.download get.dxtp.app "${BINARIES_DIRECTORY}" ${utilities_list[@]}

# initialize setup list

setup_list=()

# options #

# termux

if [[ "${dextop_option}" = "termux" ]]
then
	# populate setup list
	
	setup_list+=(
		termux-setup
		)
fi

# proot

if [[ "${dextop_option}" = "proot" ]]
then
	# populate setup list

	setup_list+=(
		termux-setup
		proot-setup
		vnc-setup
	)
fi

# setup #

for setup in ${setup_list[@]}
do
	"${BINARIES_DIRECTORY}"/"${setup}"
	
	console.clear
done

# source variables
# get additional setup values

[ -f "${PREFIX}"/bin/dextop ] && source "${PREFIX}"/bin/dextop

# write configuration

cat << 'FILE' ->> "${ROOT_DIRECTORY}"/home/"${user_name}"/.profile

# dextop configuration #

# use this section to customize setup:
# download / install / configure packages and scripts for user session

if [ -z "$(cat ${BINARIES_DIRECTORY}/dextop-configuration-complete)" ]
then
	# install applications

	applications_list=(
		leocad
		povray
		youtube-dl
	)
	
	# initialize install install list
	
	install_list=()
	
	# populate install list
	
	install_list+=(
		${applications_list[@]}
	)
	
	# install #
	
	console.install ${install_list[@]}
	
	# download scripts
	
	# bash functions
	
	console.download https://raw.githubusercontent.com/nathaneltitane/bash/master/functions		/home/"${USER}"/.bash_functions		extract
	console.download https://raw.githubusercontent.com/nathaneltitane/bash/master/functions		/home/"${USER}"/.bash_functions		record
	console.download https://raw.githubusercontent.com/nathaneltitane/bash/master/functions		/home/"${USER}"/.bash_functions		speed
	console.download https://raw.githubusercontent.com/nathaneltitane/bash/master/functions		/home/"${USER}"/.bash_functions		sprunge
	console.download https://raw.githubusercontent.com/nathaneltitane/bash/master/functions		/home/"${USER}"/.bash_functions		youtube
	
	# leocad
	
	console.download https://raw.githubusercontent.com/nathaneltitane/leocad/main				/usr/bin							leocad-build
	console.download https://raw.githubusercontent.com/nathaneltitane/leocad/main				/usr/bin							leocad-configuration
	console.download https://raw.githubusercontent.com/nathaneltitane/leocad/main				/usr/bin							leocad-download
	console.download https://raw.githubusercontent.com/nathaneltitane/leocad/main				/usr/bin							leocad-launcher
	console.download https://raw.githubusercontent.com/nathaneltitane/leocad/main				/usr/bin							leocad-position
	
	# youtube-dl
	
	console.download https://yt-dl.org/downloads/latest											/usr/bin							youtube-dl
	
	# execute scripts
	
	proot-keyboard
	proot-locales
	proot-timezones
	leocad-download
	leocad-configuration
	
	# confirm uninterrupted configuration
	
	echo "yes" > "${BINARIES_DIRECTORY}"/dextop-configuration-complete
else
	:
fi
FILE

# cleanup #

# close terminal after setup

console.scs "Setup complete [ ${script%-*} ]"
echo

console.countdown "Closing terminal to load changes in" 5

kill -9 $(pgrep -f "${SHELL}")