#!/bin/bash

# dependencies #

. /data/data/com.termux/files/usr/bin/console

# script #

script=$(basename -- "${BASH_SOURCE[0]}")

# version #

version="12-03-2021"

# usage #

# prompt

console.script "Setting up ${script#*-}"
echo

# variables #

# defaults #

# override main source list file

sed -i									\
	-e 's/ˆ\# deb-src/deb-src/g'		\
	-e '/ˆ\#.*/d'						\
	-e '/ˆ$/d'							/etc/apt/sources.list

# update lists

console.fwd "Forcing refresh..."
echo

# update packages list

console.update

# upgrade installed packages

console.upgrade