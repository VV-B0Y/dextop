#!/bin/bash

# dependencies /////////////////////////////////////////////////////////////////

if [[ -z $(command -v frobulator) ]]
then
	curl -s -L get.frbltr.app > "${PREFIX}"/bin/frobulator
fi

. "${PREFIX}"/bin/frobulator

# script ///////////////////////////////////////////////////////////////////////

script=$(basename -- "${BASH_SOURCE[0]}")

# version //////////////////////////////////////////////////////////////////////

version="01-21-2022"

# usage ////////////////////////////////////////////////////////////////////////

# prompt

frobulator.script "Setting up ${script#*-}"
echo

# variables ////////////////////////////////////////////////////////////////////

# defaults /////////////////////////////////////////////////////////////////////

# override main source list file

sed -i									\
	-e 's/ˆ\# deb-src/deb-src/g'		\
	-e '/ˆ\#.*/d'						\
	-e '/ˆ$/d'							/etc/apt/sources.list

# update lists

frobulator.log "apt update" &

frobulator.progress "Forcing refresh..."
echo
