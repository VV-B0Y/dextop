#!/bin/bash

# dependencies #

source /data/data/com.termux/files/usr/bin/console
source /data/data/com.termux/files/usr/bin/dextop

# script #

script=$(basename -- "${BASH_SOURCE[0]}")

# version #

version="08-12-2021"

# usage #

while (($#))
do
	case "${1}" in
		-h|--help)
			echo
			echo -e "Usage: ${script} [OPTION]"
			echo
			echo -e "Options:"
			echo
			echo -e "-h, --help \t Show help and usage information."
			echo
			echo -e "'${script}' [ Version ${version} ]"
			echo

			exit
		;;

		*)
			echo
			echo "Usage: ${script} [OPTION]"
			echo
			echo -e "${script}: Unknown option '${1}'"
			echo -e "Type './${script} --help' for help and usage information."
			echo

			exit 1
		;;
	esac

	shift
done

# prompt #

console.script "Starting setup [ ${script%-*} ]"

# variables #

# set defaults

# export variables

echo '# termux variables #'														>> "${PREFIX}"/bin/dextop

# source variables

[ -f "${PREFIX}"/bin/dextop ] && source "${PREFIX}"/bin/dextop

# setup #

setup_list=(
	# setup termux utilities
	termux-utilities
	# welcome message
	termux-message
	# setup termux application update
	termux-update
	# setup termux repository requirements
	termux-repositories
	# setup termux package requirements
	termux-packages
	# setup termux binary fixes and links
	termux-links
	# setup termux properties and preferences
	termux-properties
	# setup proot file manager bookmarks
	termux-bookmarks
	# setup termux silent login
	termux-silent
	# setup termux environment files
	termux-environment
	# setup termux command aliases
	termux-aliases
	# setup transient storage - [ device < // > [ termux < // > [ proot ] ] ]
	termux-storage
	# setup termux login messages
	termux-welcome
	# setup termux initial login configuration steps
	termux-configuration
	# setup checkpoint
	termux-checkpoint
	# setup cleanup
	termux-clean
)

# setup #

for setup in ${setup_list[@]}
do
	"${BINARIES_DIRECTORY}"/"${setup}"
done