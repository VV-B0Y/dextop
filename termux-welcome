#!/bin/bash

# dependencies #

source /data/data/com.termux/files/usr/bin/console
source /data/data/com.termux/files/usr/bin/dextop

# script #

script=$(basename -- "${BASH_SOURCE[0]}")

# version #

version="08-12-2021"

# usage #

while (($#))
do
	case "${1}" in
		-h|--help)
			echo
			echo -e "Usage: ${script} [OPTION]"
			echo
			echo -e "Options:"
			echo
			echo -e "-h, --help \t Show help and usage information."
			echo
			echo -e "'${script}' [ Version ${version} ]"
			echo

			exit
		;;

		*)
			echo
			echo "Usage: ${script} [OPTION]"
			echo
			echo -e "${script}: Unknown option '${1}'"
			echo -e "Type './${script} --help' for help and usage information."
			echo

			exit 1
		;;
	esac

	shift
done

# prompt #

console.script "Writing login greeter [ ${script%-*} ]"

# variables #

# set defaults

# write welcome message - replaces motd

cat << 'FILE' ->> "${HOME}"/.bashrc

# dependencies #

source /data/data/com.termux/files/usr/bin/console
source /data/data/com.termux/files/usr/bin/dextop

console.msg "Updating system."
echo

console.update

console.upgrade

console.clear 2

console.fwd "Welcome to [ Termux ] Dextop!"
echo

console.inf "Run 'proot-session -u <username>' to start your session."
console.inf "Run 'proot-session -u <username> -a <application>' to start an application with your session."
echo
FILE
